{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Artifact Registry",
  "description": "Tracks artifacts created by automation scripts for cleanup",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "const": "1.0"
    },
    "sessions": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "script": {
            "type": "string",
            "description": "Which script created this session"
          },
          "created": {
            "type": "string",
            "format": "date-time"
          },
          "status": {
            "type": "string",
            "enum": ["active", "completed", "deferred", "destroyed"]
          },
          "artifacts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "path": { "type": "string" },
                "type": { 
                  "type": "string",
                  "enum": ["file", "directory"]
                },
                "function": {
                  "type": "string",
                  "description": "Which function created this artifact"
                },
                "cleanup_with": {
                  "type": "string",
                  "description": "Command to clean up this artifact"
                }
              },
              "required": ["path", "type"]
            }
          },
          "dependencies": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Other sessions this depends on"
          }
        },
        "required": ["script", "created", "status", "artifacts"]
      }
    }
  },
  "required": ["version", "sessions"]
}
